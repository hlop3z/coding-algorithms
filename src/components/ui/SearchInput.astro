---
interface Props {
  placeholder?: string;
  id: string;
  targetId: string;
  class?: string;
}

const { placeholder = 'Search...', id, targetId, class: className } = Astro.props;
---

<div class:list={['relative', className]}>
  <svg
    class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
    />
  </svg>
  <input
    type="text"
    id={id}
    data-search-target={targetId}
    class="search-input pl-10"
    placeholder={placeholder}
  />
</div>

<script>
  // Initialize search functionality
  document.querySelectorAll<HTMLInputElement>('[data-search-target]').forEach((input) => {
    const targetId = input.dataset.searchTarget;
    if (!targetId) return;

    const table = document.getElementById(targetId);
    if (!table) return;

    const rows = table.querySelectorAll('tbody tr');

    input.addEventListener('input', () => {
      const query = input.value.toLowerCase().trim();

      rows.forEach((row) => {
        const text = row.textContent?.toLowerCase() || '';
        const isVisible = query === '' || text.includes(query);
        (row as HTMLElement).style.display = isVisible ? '' : 'none';
      });
    });
  });
</script>
